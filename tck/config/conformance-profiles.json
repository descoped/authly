{
  "test_profiles": {
    "basic": {
      "name": "OpenID Connect Core: Basic Certification Profile",
      "description": "Basic OpenID Connect certification profile with authorization code flow",
      "plan_name": "oidcc-basic-certification-test-plan",
      "configuration": {
        "client": {
          "client_id": "oidc-conformance-test",
          "client_secret": "conformance-test-secret-change-in-production",
          "redirect_uri": "https://localhost:8443/test/a/authly/callback"
        },
        "server": {
          "issuer": "http://localhost:8000",
          "discovery_url": "http://localhost:8000/.well-known/openid_configuration"
        },
        "test_config": {
          "skip_heart_beat_tests": false,
          "description": "Basic OIDC compliance test for Authly",
          "alias": "authly-basic",
          "client_auth_type": "client_secret_basic",
          "response_type": "code",
          "response_mode": "default",
          "request_type": "plain_http_request"
        }
      },
      "expected_tests": [
        "oidcc-server-rotate-keys",
        "oidcc-ensure-request-without-nonce-succeeds",
        "oidcc-ensure-request-with-unknown-parameter-succeeds",
        "oidcc-ensure-redirect-uri-parameter-added-per-rfc6749",
        "oidcc-codereuse",
        "oidcc-codereuse-30seconds",
        "oidcc-unsigned-request-object-supported-correctly-or-rejected-as-unsupported",
        "oidcc-request-with-multiple-aud-succeeds",
        "oidcc-response-type-missing",
        "oidcc-scope-not-supported",
        "oidcc-ensure-request-with-valid-pkce-succeeds",
        "oidcc-ensure-request-without-pkce-fails"
      ]
    },
    "implicit": {
